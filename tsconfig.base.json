{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "declaration": false,
    },
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ],
    "exclude": ["node_modules"]
}
