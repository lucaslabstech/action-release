{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "composite": true,
        "module": "commonjs",
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.spec.tsx",
        "**/*.test.tsx",
        "**/*.spec.js",
        "**/*.test.js",
        "**/*.spec.jsx",
        "**/*.test.jsx",
        "**/*.d.ts",
        "tests/data",
        "tests/data/**/*.json",
        ".",
        "jest.config.ts"
    ]
}
